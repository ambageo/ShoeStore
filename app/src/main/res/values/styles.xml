<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TitleTextView">
        <item name="android:layout_marginTop">@dimen/margin_top</item>
        <item name="android:textSize">30sp</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:gravity">center_horizontal</item>

    </style>
    <style name="TextView">
        <item name="android:layout_marginTop">@dimen/margin_top</item>
        <item name="android:padding">@dimen/padding_textview</item>
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ShoeDetailTextView">
        <item name="android:layout_marginTop">@dimen/margin_top_half</item>
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
